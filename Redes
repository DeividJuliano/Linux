ip address show
netstat -nr
netstat -r    #rotas ativas
netstat -tulpn   #saber serviços que estão rodando
sudo ss -tuln   #saber serviços que estão rodando
ifconfig  
ifconfig -a  #mostra todas as interfaces, incluindo as inativas
ifconfig enp0s8 down  #desligar interface
ifconfig enp0s8 up  #ligar interface
ip link set enp0s8 down  #desliga a interface
arp -a  #tabela mac
ifconfig enp0s8 hw 08:00:00:b0:b0:ca #mudar o mac da interface, útil para saber conflito de mac,(desative a interface)
ip addr flush dev  #remove endereços IP atribuídos a uma interface
ip addr flush enp0s8 # #remove endereços IP atribuídos a uma interface
lspci  #endereços de hardware, comunicação barramentos
ping -c 2 xxxx   #envia 2 pacotes e para o ip que você seleciona
ping -t 1 ping.online.net
ping -s 1500 192.168.199.1    #força pacotes de 1500
ping -i 4  8.8.8.8 ping   #a cada 4 segundos
ifconfig ethx 0 xxxx/xx #forma mais antiga
ifconfig enp0s3 x.x.x.x netmask 255.255.255.0  #adicionar ip a interface, algumas distribuição essa configuração não é permanente, use o netplan
ip addr add 172.16.25.100/24 dev enp0s8   #adiciona ip na placa, em algumas distribuições será necessário criar interface
ip addr del 172.16.25.100/24 dev enp0s8   #remove o ip na placa

route add default gw 192.168.1.254    #adiciona uma rota gateway padrão
route add -host 10.10.200.254/32 gw 192.168.1.55      #rota para apenas um local, endereço
route add -net 172.16.1.0/25 gw 192.168.1.75      #rota para rede 172.16.1.0/25 , apenas um host rota estática
ip route del 172.16.1.0/25 via 192.168.1.75      #exclui a rota para rede 172.16.1.0/25 
ip route add 172.16.1.0/25 via 192.168.1.75 dev enp0s3      #adiciona a rota para rede 172.16.1.0/25
ip route add 10.10.100.250/32 via 192.168.1.55 dev enp0s3      #adiciona a rota para um host 10.10.100.250/25
ip route add default via 192.168.254 dev enp0s3
route -n    #saber o gateway
route #tabela de roteamento
ip route show  
shutdown -r now  #reiniciar
shutdown -h now #desligar
sudo poweroff    #desligar servidor Ubuntu
ssh nomeusuario@ip-remoto #para acessar um sevidor, host
ip addr  #mostrar o ip
sudo cat /etc/NetworkManager/system-connections/Wired\ connection\ 1   #mostrar configurações de redes ?
cat /etc/network/interfaces   #configurações de redes
cat /etc/net   #visualizar arquivos de configurações no hosts
cat /etc/netplan/01-netcfg.yaml #vizualizar as configuraçoes do arquivo 01-netcfg.yaml, netplan é o mais aconselhável para uso
ip route show
resolvectl   #saber onde resolve o dns
last #informações de quem logou
w   #informações de quem logou de forma mais precisa
cat /etc/hosts  #saber os dispositivos
systemctl stop NetworkManager.service   #derrubar o servicço de rede em segundo plano para ele não voltar mais as configurações, use o flush para limpar as configurações.


 



